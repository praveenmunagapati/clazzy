# Maintainer: Andrew Groot <groot.andrew@gmail.com>
pkgname=clazzy
pkgver=0.1a
pkgrel=1
pkgdesc="Generate object oriented source code skeletons based on plaintext input."
arch=('i686' 'x86_64')
url="http://clazzy.org/"
license=('GPL3')
groups=()
depends=()
makedepends=('gcc>=4.7')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://clazzy.org/downloads/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('SKIP')

build() {
  cd "$srcdir/$pkgname-$pkgver/"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/"
  make install
}
